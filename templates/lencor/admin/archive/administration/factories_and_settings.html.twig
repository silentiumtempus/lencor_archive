{% extends 'lencor/admin/archive/administration/index.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/css/fac-set.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('build/js/fac-set.js') }}"></script>
{% endblock %}

{% block main %}
    <div class="page-title">
        <h3>{{ 'factset.title'|trans }}</h3>
    </div>
    <div class="fac-set">
        <div class="content-list factories left">
            <ul class="fa-ul" id="factories" data-path="{{ path('admin-settings') }}">
                {% block factories %}
                    {{ include('lencor/admin/archive/administration/factories.html.twig', { 'factories': factories }) }}
                {% endblock %}
            </ul>
        </div>
        <div class="content-list settings left">
            <ul class="fa-ul" id="settings">
                {% block settings %}
                    {{ include('lencor/admin/archive/administration/settings.html.twig')}}
                {% endblock %}
            </ul>
        </div>
    </div>
{% endblock %}