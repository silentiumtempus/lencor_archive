{% trans_default_domain 'facset' %}
{% block factories %}
    {% if factories is defined %}
        {% if factories is iterable %}
            {% for factory in factories %}
                <li id="factory_{{ factory.id }}">
                <span>
                    <a href="#" id="{{ factory.id }}" name="openFactory">{{ factory }}</a>
                </span>
                    <span>
                    <a href="#" id="{{ factory.id }}" name="editFactory"><i class="fa fa-edit"> </i></a>
                    <i class="fa fa-trash red disabled"> </i>
                </span>
                </li>
            {% endfor %}
        {% else %}
            <li id="factory_{{ factories.id }}">
            <span>
                <a href="#" id="{{ factories.id }}" name="openFactory">{{ factories.factoryName }}</a>
            </span>
                <span>
                <a href="#" id="{{ factories.id }}" name="editFactory"><i class="fa fa-edit"> </i></a>
                <i class="fa fa-trash red disabled"> </i>
            </span>
            </li>
        {% endif %}
    {% else %}
        <li>
            <span>{{ 'facset.factories.placeholder'|trans }}</span>
        </li>
    {% endif %}
{% endblock %}