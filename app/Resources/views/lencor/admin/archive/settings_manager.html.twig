{% extends 'base.html.twig' %}

{% block body_id 'admin_post_index' %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('lencor_settings_manager_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_post'|trans }}
        </a>
    </div>
    {{ parent() }}

{% endblock %}

{% block main %}
    <h1>{{ 'title.settings_list'|trans }}</h1>

    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">{{ 'setting.id'|trans }}</th>
            <th scope="col">{{ 'factory.name'|trans }}</th>
            <th scope="col">{{ 'setting.name'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for setting in settings %}
            <tr>
                <td>{{ setting.id }}</td>
                <td>{{ setting.factory.factoryName }}</td>
                <td>{{ setting.settingName }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2" align="center">{{ 'post.no_posts_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}


