{% if entryExists %}
    {% if logFiles is empty and logFolders is empty %}
        В директории логов записи отсутствуют
    {% else %}
        <div>
            <br>
            <br>
        </div>
        <a class="button" name="openSubDir">{{ 'logs.title.rootDir'|trans }}</a>
        <ul class="fa-ul" id="{{ entryId }}">
            {% for logFolder in logFolders %}
                <li class="row">
                    <span id="{{ currentFolder }}">
                        <i class="fa fa-folder"> </i><a id="{% if dirPath is defined %}{{ dirPath }}{% endif %}" class="" name="openSubDir" href="">{{ logFolder.fileName }}</a> |
                    </span>
                    <span>
                        {{ logFolder.size }} |
                    </span>
                    <span>
                        {{ logFolder.mTime }} |
                    </span>
                </li>
            {% endfor %}
            {% for logFile in logFiles %}
                <li class="row">
                    <span id="{{ currentFolder }}">
                        <i class="fa fa-file-text"> </i><a id="{{ entryId }}" class="" name="openLog" href="">{{ logFile.fileName }}</a> |
                    </span>
                    <span>
                        {{ logFile.size }} |
                    </span>
                    <span>
                        {{ logFile.mTime }} |
                    </span>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% else %}
    Архивная запись не найдена
{% endif %}
