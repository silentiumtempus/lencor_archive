{% extends 'base.html.twig' %}

    {% block sidebar %}
        {{ parent() }}
    {% endblock %}

{% block javascripts %}
     {{ parent() }}
     <script type="text/javascript" src="{{ asset('js/searchform-loader.js') }}"></script>
{% endblock %}

{% block main %}
    <div>
        <h3>{{ 'entries.title.search'|trans }}</h3>
    </div>
    <div>
        {{ form_start(searchForm) }}
        <ul id="main-table" class="form-row" data-path="{{ path('entries') }}">
            <li>
                <span>{{ form_row(searchForm.year) }}</span>
                <span>{{ form_row(searchForm.factory) }}</span>
                <span>{{ form_row(searchForm.setting) }}</span>
            </li>
            <li>
                <span>{{ form_row(searchForm.archiveNumber, { 'attr' : {'placeholder' : 'search.placeholder.archive_number'|trans}}) }}</span>
                <span>{{ form_row(searchForm.registerNumber, { 'attr' : {'placeholder' : 'search.placeholder.register_number'|trans}}) }}</span>
                <span>{{ form_row(searchForm.contractNumber, { 'attr' : {'placeholder' : 'search.placeholder.contract_number'|trans}}) }}</span>
                <span>{{ form_row(searchForm.fullConclusionName, { 'attr' : {'placeholder' : 'search.placeholder.—Åonclusion_fullname'|trans}}) }}</span>
            </li>
            <li>
                <span>{{ form_row(searchForm.resetButton) }}</span>
                <span>{{ form_row(searchForm.submitButton) }}</span>
            </li>
        </ul>
        {{ form_errors(searchForm) }}
        {{ form_end(searchForm) }}
    </div>
    <div>
        <div class="left"><h3>{{ 'entries.title.list'|trans }}</h3></div>
        <div class="right">
            <a href="{{ path('entries_new') }}" class="button right">
            <i class="fa fa-pencil" aria-hidden="true"></i> {{ 'button.entry.create'|trans }}
            </a>
        </div>
    </div>
    <table class="table white table-entries" id="main-table" data-path="{{ path('entries') }}">
        <thead>
        <tr>
            <td></td>
            <td scope="col">{{ 'entries.header.year'|trans }}</td>
            <td scope="col">{{ 'entries.header.factory'|trans }}</td>
            <td scope="col">{{ 'entries.header.setting'|trans }}</td>
            <td scope="col">{{ 'entries.header.archive_number'|trans }}</td>
            <td scope="col">{{ 'entries.header.register_number'|trans }}</td>
            <td scope="col">{{ 'entries.header.contract_number'|trans }}</td>
            <td scope="col">{{ 'entries.header.conclusion_fullname'|trans }}</td>
            <td scope="col" class="text-center"><i class="fa fa-info"
                                                   aria-hidden="true"></i> {{ 'entries.header.info'|trans }}</td>
            <td scope="col" class="text-center"><i class="fa fa-cogs"
                                                   aria-hidden="true"></i> {{ 'entries.header.actions'|trans }}</td>
        </tr>
        </thead>
        <tbody id="main-tbody" class="entries" data-path="{{ path('entries') }}">
        {% block entries %}

        {% endblock %}
        </tbody>
    </table>
    <div id="addFolder" class="folder-add">
    </div>
    <div id="addFile" class="file-add">
    </div>
    <div id="downloadFile" class="file-download">
    </div>
{% endblock %}