{% block main %}

    <div class="">
        <a href="{{ path('entries_new') }}" class="button right">
            <i class="fa fa-pencil" aria-hidden="true"></i> {{ 'button.entry.create'|trans }}
        </a>
    </div>
    <div>
        <h2>{{ 'entries.title'|trans }}</h2>

    </div>
    <div>
        <ul id="main-table" class="form-row" data-path="{{ path('entries') }}">
            {{ form_start(searchForm) }}
            <li>
                <span>{{ form_row(searchForm.resetButton) }}</span>
            </li>
            <li>
                <span>{{ form_row(searchForm.year) }}</span>
                <span>{{ form_row(searchForm.factory) }}</span>
                <span>{{ form_row(searchForm.setting) }}</span>
                <span>{{ form_row(searchForm.archiveNumber, { 'attr' : {'placeholder' : 'Введите архивный номер'}}) }}</span>
                <span>{{ form_row(searchForm.registerNumber, { 'attr' : {'placeholder' : 'Введите регистрационный номер'}}) }}</span>
                <span>{{ form_row(searchForm.contractNumber, { 'attr' : {'placeholder' : 'Введите номер договора'}}) }}</span>
                <span>{{ form_row(searchForm.fullConclusionName, { 'attr' : {'placeholder' : 'Введите полное название заключения'}}) }}</span>
                <span>{{ form_row(searchForm.submitButton) }}</span>
            </li>
            {{ form_errors(searchForm) }}
            {{ form_end(searchForm) }}
            <li class="archive-search-header">
                <span></span>
                <span>{{ 'entries.header.year'|trans }}</span>
                <span>{{ 'entries.header.factory'|trans }}</span>
                <span>{{ 'entries.header.setting'|trans }}</span>
                <span>{{ 'entries.header.archive_number'|trans }}</span>
                <span>{{ 'entries.header.register_number'|trans }}</span>
                <span>{{ 'entries.header.contract_number'|trans }}</span>
                <span>{{ 'entries.header.conclusion_fullname'|trans }}</span>
                <span class="text-center"><i class="fa fa-info"
                                             aria-hidden="true"></i> {{ 'entries.header.info'|trans }}</span>
                <span class="text-center"><i class="fa fa-cogs"
                                             aria-hidden="true"></i> {{ 'entries.header.actions'|trans }}</span>
            </li>
        </ul>
    </div>

