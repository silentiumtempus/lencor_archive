{% if addHeaderAndButtons %}
<table id="{{ entryId }}" style="width: 100%; background: #ffffff; margin: 0 0 8px 0;">

    <tr class="entry-content-buttons">
        <td id="entry-content-buttons-spacer" class="entry-content-buttons-spacer">
        </td>

        <td><a class="btn btn-success btn-xs" id="{{ entryId }}"
               href="#" name="folderAdd"
               title="Добавить директорию"><i
                        class="fa fa-folder-o"></i> Добавить директорию </a></td>
        <td><a class="btn btn-success btn-xs" id="{{ entryId }}"
               href="#" name="fileAdd" title="Добавить файл"><i
                        class="fa fa-file-o"></i> Добавить файл </a></td>
        <td></td>

    </tr>
    <tr class="row-content">
        <td class="entry-content-container" colspan="9">
            <ul id="entry-content-header" class="fa ul entry-content-header">
                <li>
                    <span><h5>Имя</h5></span>
                    <span><h5>Пользователь</h5></span>
                    <span><h5>Дата</h5></span>
                    <span><h5>Действия</h5></span>
                </li>
            </ul>
        </td>
    </tr>
    <tr class="row-content">
        <td class="entry-content-container" colspan="9">
            {% endif %}

            {% if (htmlTree is not empty) or (fileNodes is not empty) %}
                <ul class="fa-ul entry-content-container entry-content-folders-block">
                {# <li>..</li> #}


                {% for directory in htmlTree %}
                    <li>
                        <span> <a href="#" name="openFolder" id="{{ directory.id }}">
                                <i class="fa fa-folder"></i> {{ directory.folderName }} </a>
                        </span>
                        <span>{{ directory.modifiedByUserId }}</span>
                        <span>{{ directory.lastModified|date('Y-m-d H:m:s') }}</span>
                        <span> Actions</span>
                    </li>
                    <li style="display: none" id="folderContent_{{ directory.id }}"></li>

                {% endfor %}
                {% for file in fileNodes %}
                    <li>
                        <span><a href="#" name="downloadFile" id="{{ file.id }}">
                                <i class="fa fa-file-text"></i> {{ file.fileName }} </a>
                        </span>
                        <span> {{ file.modifiedByUserId }}</span>
                        <span> {{ file.lastModified|date('Y-m-d H:m:s') }} </span>
                        <span><a hrref="#" name </span>
                    </li>
                {% endfor %}
            {% else %}
                <li>
                    <span>Пустая директория</span>
                </li>
                </ul>
            {% endif %}
        </td>
    </tr>
</table>