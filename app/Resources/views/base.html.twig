<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{% block title %}НПО "Ленкор"{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap-flatly-3.3.7.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/font-lato.css') }}">
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>

<body id="{% block body_id %}{% endblock %}">
{% block javascripts %}
    <script src="{{ asset('jquery/jquery.min.js') }}"></script>

{% endblock %}

{% block header %}
    <header>
        <div class="navbar navbar-default navbar-static-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="{{ path('lencor_welcome_index') }}">
                        Архив НПО "Ленкор"
                    </a>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">{{ 'menu.toggle_nav'|trans }}</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">

                        {% block header_navigation_links %}
                            <li>
                                <a href="{{ path('lencor_welcome_index') }}">
                                    <i class="fa fa-home" aria-hidden="true"></i> {{ 'menu.homepage'|trans }}
                                </a>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li>
                                    <a href="">
                                        <i class="fa fa-lock" aria-hidden="true"></i> {{ 'menu.admin'|trans }}
                                    </a>
                                </li>
                            {% endif %}
                        {% endblock %}
                        {% if app.user %}
                            <li>
                                <a href="{{ path('fos_user_security_logout') }}">
                                    <i class="fa fa-sign-out" aria-hidden="true"></i> {{ 'menu.logout'|trans }}
                                    {# {{ 'layout.logout'|trans({}, 'FOSUserBundle') }} #}
                                </a>
                            </li>
                        {% else %}
                            <li>
                                <a href="{{ path('fos_user_security_login') }}">
                                    <i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'menu.login'|trans }}
                                    {# {{ 'layout.login'|trans({}, 'FOSUserBundle') }} #}
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

<div class="{#container#} body-container">
    {% block body %}
        <div class="row">
            <div id="sidebar" class="col-sm-9">
                {% block sidebar %}
                {% endblock %}
            </div>
            <div class="col-sm-9" id="main-9">
                {{ include('lencor/admin/archive/flash_messages/archive_manager/flash_messages.html.twig') }}

                {% block main %}{% endblock %}
            </div>
        </div>
    {% endblock %}
</div>

{% block footer %}
    <footer>
        <div class="container">
            <div class="row">
                {#<div id="footer-copyright" class="col-md-6">
                </div>
                <div id="footer-resources" class="col-md-6">
                    <p>
                        <a href="" title="">
                            <i class="fa fa-twitter" aria-hidden="true"></i>
                        </a>
                        <a href="" title="">
                            <i class="fa fa-facebook" aria-hidden="true"></i>
                        </a>
                        <a href="" title="">
                            <i class="fa fa-rss" aria-hidden="true"></i>
                        </a>
                    </p>
                </div>
            </div> #}
            </div>
    </footer>
{% endblock %}

</body>
</html>
